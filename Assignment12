#Student Names and Scores
name = input("Students name:")
while grade != 0:
score = float(input("Enter the test score:"))
if score >= 90:
    name.append(name)
    grade.append(grade)
    grade = "A"
    result = "pass"
elif score >= 80:
    grade = "B"
    result = "Pass"
elif score >= 70:
    grade = "C"
    result = "Pass"
elif score >= 60:
    grade = "D"
    result = "Pass"
else:
    grade = "F"
    result = "Fail"
print("Student Name:", name)
print("Score:", score)
print("Grade:", grade)
print("Result:", result)
