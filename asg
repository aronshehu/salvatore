#Calculating The perimeter and area of the rectangle
num1 = 4
num2 = 8
num3 =input("Do you want to find area or perimeter:")
if num3 == "area":
    print(num1*num2)
elif num3 == "perimeter":
    print(2*num1+2*num2)
else:
    print("invalid")

#Converting from Celsius to Fahrenheit
celsius =float((input("Enter temperature in Celsius:")))
print((celsius*9/5) + 32)
#Converting from Fahrenheit to Celsius
fahrenheit =float((input("Enter temperature in Fahrenheit:")))
print((fahrenheit-32) * 5/9)

#Seperating Ones and Tens
number = int(input("Enter the 2-digit number:"))
tens = number // 10
ones = number % 10
print("tens:", tens)
print("ones:", ones)

#Student Names and Scores
name = input("Students name:")
score = float(input("Enter the test score:"))
if score >= 90:
    grade = "A"
    result = "pass"
elif score >= 80:
    grade = "B"
    result = "Pass"
elif score >= 70:
    grade = "C"
    result = "Pass"
elif score >= 60:
    grade = "D"
    result = "Pass"
else:
    grade = "F"
    result = "Fail"
print("Student Name:", name)
print("Score:", score)
print("Grade:", grade)
print("Result:", result)
